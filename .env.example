# App
JWT_SECRET_KEY=jwt_secret_key

# MongoDB 설정 (로컬 개발용)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here
MONGO_PORT=27017

# MongoDB Atlas (프로덕션용 - 선택사항)
# MONGO_URL이 설정되면 위의 개별 변수들은 무시됩니다
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/dailylog?retryWrites=true&w=majority

# Mongo Express (관리 페이지) 설정
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=your_secure_password_here

#RESEND
RESEND_API_KEY=your_api_key

# Anthropic
ANTHROPIC_API_KEY=your_api_key

# OpenAI
OPEN_AI_API_KEY=your_api_key

# Cloudflare R2 Storage
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name
CLOUDFLARE_R2_PUBLIC_DOMAIN=your_custom_domain_optional
